// Function to analyze sentiment of the text
function analyzeSentiment(text) {
    // Define positive, negative, and neutral words
    const positiveWords = ["love", "great", "awesome", "happy"];
    const negativeWords = ["hate", "bad", "terrible", "sad"];
    const neutralWords = ["neutral", "okay", "fine", "average"];

    // Count positive, negative, and neutral words in the text
    let positiveCount = 0;
    let negativeCount = 0;
    let neutralCount = 0;

    // Convert text to lowercase for case-insensitive comparison
    const lowerCaseText = text.toLowerCase();

    // Check for positive words
    positiveWords.forEach(word => {
        if (lowerCaseText.includes(word)) {
            positiveCount++;
        }
    });

    // Check for negative words
    negativeWords.forEach(word => {
        if (lowerCaseText.includes(word)) {
            negativeCount++;
        }
    });

    // Check for neutral words
    neutralWords.forEach(word => {
        if (lowerCaseText.includes(word)) {
            neutralCount++;
        }
    });

    // Determine sentiment based on counts of positive, negative, and neutral words
    if (positiveCount > negativeCount && positiveCount > neutralCount) {
        return "Positive";
    } else if (negativeCount > positiveCount && negativeCount > neutralCount) {
        return "Negative";
    } else if (neutralCount > positiveCount && neutralCount > negativeCount) {
        return "Neutral";
    } else {
        return "Mixed";
    }
}

// Function to get user input
function getUserInput() {
    return new Promise((resolve, reject) => {
        const readline = require('readline').createInterface({
            input: process.stdin,
            output: process.stdout
        });

        readline.question("Enter the text: ", (text) => {
            resolve(text);
            readline.close();
        });
    });
}

// Main function
async function main() {
    const text = await getUserInput(); // Get user input for the text
    const sentimentResult = analyzeSentiment(text);
    console.log("Sentiment:", sentimentResult);
}

// Call the main function
main();
