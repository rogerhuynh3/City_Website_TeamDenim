import java.util.Scanner;

public class SentimentAnalysis {
    public static void main(String[] args) {
        // Input text string
        Scanner scanner = new Scanner(System.in);
        System.out.print("Enter the text string: ");
        String text = scanner.nextLine();
        
        // Analyze sentiment
        String sentiment = analyzeSentiment(text);
        
        // Output sentiment
        System.out.println("Sentiment of the text string is: " + sentiment);
    }
    
    public static String analyzeSentiment(String text) {
        // Simplified sentiment analysis based on presence of positive/negative words
        
        // List of positive and negative words (you can extend this list)
        String[] positiveWords = {"happy", "good", "great", "joyful", "awesome"};
        String[] negativeWords = {"sad", "bad", "terrible", "awful", "disappointing"};
        
        // Tokenize input text into words
        String[] words = text.toLowerCase().split("\\s+");
        
        // Check if there are more positive or negative words
        int positiveCount = 0;
        int negativeCount = 0;
        
        for (String word : words) {
            for (String positiveWord : positiveWords) {
                if (word.contains(positiveWord)) {
                    positiveCount++;
                    break;
                }
            }
            
            for (String negativeWord : negativeWords) {
                if (word.contains(negativeWord)) {
                    negativeCount++;
                    break;
                }
            }
        }
        
        // Determine sentiment
        if (positiveCount > negativeCount) {
            return "Positive";
        } else if (negativeCount > positiveCount) {
            return "Negative";
        } else {
            return "Neutral";
        }
    }
}

